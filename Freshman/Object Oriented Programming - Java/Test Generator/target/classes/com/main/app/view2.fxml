<VBox prefHeight="689.0" prefWidth="913.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.app.Controller">
  <children>
    <MenuBar fx:id="menubar" prefHeight="0.0" prefWidth="879.0" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#method9" text="Quit" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="646.0" prefWidth="867.0" VBox.vgrow="ALWAYS">
