                  <MenuItem fx:id="method9" mnemonicParsing="false" onAction="#method9" onMenuValidation="#method9" text="Exit." />
              </items>
               <font>
                  <Font name="Arial Italic" size="15.0" />
               </font>
            </MenuButton>
            <TextArea fx:id="resultArea" layoutX="19.0" layoutY="266.0" prefHeight="331.0" prefWidth="861.0" />
